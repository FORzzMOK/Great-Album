@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="http://code.jquery.com/jquery-1.8.3.js"></script>
    <style>
        * {
            font-family: 'Calibri';
        }
        body {
            background-color: #eeeff1;
        }
        .selected {
            background-color: skyblue;
        }
        header{
            position: absolute;
            top: 0px;
            left: 0px;
            right: 0px;
            width: 100%;
            height: 45px;
            background: linear-gradient(45deg, #8E0039, #C5DDE8);
        }
            header nav {
                width: 300px;
                height: 45px;
                position: relative;
                margin-left: 50%;
                left: -150px;
            }
                header nav form{
                    position: absolute;
                }
                header nav .formhomePage{
                    left: 0px;
                }
                header nav .formnews {
                    left: 50px;
                }
                header nav .formsearch {
                    left: 100px;
                }
                header nav .formsettings {
                    left: 150px;
                }
                header nav .formsignOut {
                    left: 200px;
                }
                header nav button {
                    width: 35px;
                    height: 35px;
                    position: relative;
                    top: 5px;
                }
                header nav .homePage {
                    background-image: url(Images/icon/nav/icons8-главная-100.png);
                    background-size: contain;
                    background-position: center;
                    background-repeat: no-repeat;
                    background-color: transparent;
                    border: none;
                }
                header nav .news {
                    background-image: url(Images/icon/nav/icons8-новости-100.png);
                    background-size: contain;
                    background-position: center;
                    background-repeat: no-repeat;
                    background-color: transparent;
                    border: none;
                }
                header nav .settings {
                    background-image: url(Images/icon/nav/icons8-настройки-100.png);
                    background-size: contain;
                    background-position: center;
                    background-repeat: no-repeat;
                    background-color: transparent;
                    border: none;
                }
                header nav .search {
                    background-image: url(Images/icon/nav/icons8-поиск-100.png);
                    background-size: contain;
                    background-position: center;
                    background-repeat: no-repeat;
                    background-color: transparent;
                    border: none;
                }
                header nav .signOut {
                    background-image: url(Images/icon/nav/icons8-выход-100.png);
                    background-size: contain;
                    background-position: center;
                    background-repeat: no-repeat;
                    background-color: transparent;
                    border: none;
                }
            section {
                width: 906px;
                height: auto;
                position: relative;
                top: 50px;
                margin-left: 50%;
                left: -453px;
                border-radius: 5px;
                margin-bottom: 30px;
            }
    </style>
</head>
<body>
    <header>
        <nav class="headNav" id="headNavButton">
            <form action="~/Pages/homePage.cshtml" class="formhomePage"><button class="homePage"></button></form>
            <form action="~/Pages/news.cshtml" class="formnews"><button class="news"></button></form>
            <form action="~/Pages/search.cshtml" class="formsearch"><button class="search"></button></form>
            <form action="~/Pages/settings.cshtml" class="formsettings"><button class="settings"></button></form>
            <form action="~/Pages/SignOut.cshtml" class="formsignOut"><button class="signOut"></button></form>
        </nav>
    </header>
    <section>
        @RenderBody()
    </section>
    <script>
        headNavButton.onmousedown = function () {
            return false;
        };
    </script>
</body>
</html>

